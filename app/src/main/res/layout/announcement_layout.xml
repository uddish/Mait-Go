<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/img_letter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/circular_blue"
        android:gravity="center"
        android:text="U"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/midnightBlue" />

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/img_letter"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/pointed_card_blue"
            android:padding="5dp">

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Uddish Verma"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Teacher's message comes here with the date and time"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="3:09 P.M"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="21/04/2017"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginRight="5dp"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>