<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_result"
        android:background="@drawable/blue_gradient"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            CircleProgressView:expandedTitleTextAppearance="?android:textAppearanceLarge"
            CircleProgressView:collapsedTitleTextAppearance="?android:textAppearanceMedium"
            CircleProgressView:contentScrim="@color/toryBlue"
            CircleProgressView:expandedTitleMarginEnd="64dp"
            CircleProgressView:expandedTitleMarginStart="28dp"
            CircleProgressView:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circle_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@android:color/white"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="0dp"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_outerContourSize="0dp"
                CircleProgressView:cpv_rimColor="@android:color/transparent"
                CircleProgressView:cpv_rimWidth="10dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/darkBlue"
                CircleProgressView:cpv_textColor="#fff"
                CircleProgressView:cpv_textScale="0.7"
                CircleProgressView:cpv_unit="%"
                CircleProgressView:cpv_unitColor="#fff"
                CircleProgressView:cpv_unitPosition="right_top"
                CircleProgressView:cpv_unitScale="1"
                CircleProgressView:cpv_value="0"
                CircleProgressView:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"/>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/result_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                CircleProgressView:layout_collapseMode="pin"
                android:background="@android:color/transparent"
                CircleProgressView:layout_scrollFlags="scroll|enterAlways"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <com.wang.avi.AVLoadingIndicatorView
    android:id="@+id/avi"
    style="@style/AVLoadingIndicatorView.Large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="visible"
    CircleProgressView:indicatorColor="@color/resolutionBlue"
    CircleProgressView:indicatorName="BallClipRotatePulseIndicator" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        CircleProgressView:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</android.support.design.widget.CoordinatorLayout>
