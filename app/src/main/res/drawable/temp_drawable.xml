<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="350dp" android:height="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/darkBlue"/>
        </shape>
    </item>

    <item
        android:gravity="center">
        <shape android:shape="rectangle">
            <size android:height="180dp"
                android:width="250dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item
        android:left="250dp"
        android:right="0dp"
        android:top="0dp"
        android:gravity="center">
        <shape android:shape="oval">
            <size
                android:height="50dp"
                android:width="50dp"/>
            <solid android:color="@color/darkBlue" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="250dp"
        android:top="0dp"
        android:bottom="3dp"
        android:gravity="center">
        <shape android:shape="oval">
            <size
                android:height="50dp"
                android:width="50dp"/>
            <solid android:color="@color/darkBlue" />
        </shape>
    </item>

</layer-list>